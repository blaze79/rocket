<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.slientpom.rocket.javafx.XFController">
   <bottom>
      <HBox alignment="center">
         <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
         </padding>
         <Button fx:id="button1" alignment="center" onAction="#run1Flight" text="2 Drones flight" />
         <Button fx:id="button2" alignment="center" onAction="#run2Flight" text="Bang Bang" />
         <Button fx:id="button3" alignment="center" onAction="#run3Flight" text="Head to head" />
      </HBox>
   </bottom>
   <center>
      <ImageView fx:id="currentFrame" />
   </center>
</BorderPane>
